function dosomething_kudos_save($fid, $uid, $tid) {
  $values = array(
    'fid' => $fid,
    'uid' => $uid,
    'tid' => $tid,
  );

  $record = db_insert('dosomething_kudos')->fields($values)->execute();

  dpm($record);
}

